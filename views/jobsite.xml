<?xml version="1.0" encoding="utf-8"?>
<odoo>

		<record id="view_jobsite_tree" model="ir.ui.view">
			<field name="model">jobsite</field>
			<field name="name">jobsite.tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="type"/>
				</tree>
			</field>
		</record>

